<div class="form-floating mb-2">
    <h1 class="h1Register">Registro</h1>
    <form id="registerForm">
        <div class="form-floating">
            <input class="form-control" id="floatingInput" placeholder="Nombre" name="first_name">
            <label for="floatingInput">Nombre</label>
        </div>
        <br />
        <div class="form-floating">
            <input class="form-control" id="floatingInput" placeholder="Apellido" name="last_name">
            <label for="floatingInput">Apellido</label>
        </div>
        <br />
        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="Email" name="email">
            <label for="floatingInput">Email</label>
        </div>
        <br />
        <div class="form-floating">
            <input class="form-control" id="floatingInput" placeholder="Edad" name="age">
            <label for="floatingInput">Edad</label>
        </div>
        <br />
        <div class="form-floating">
            <input type="password" class="form-control" placeholder="Password" name="password">
            <label>Contraseña</label>
        </div>
        <br>
        <input class="btn btn-dark" type="submit" id="registerButton">
    </form>
    <p class="existingAccount">¿Ya tienes una cuenta? <a class="linkToLogin" href="/users/login">Ingresa aquí</a></p>
</div>
<script src="/js/register.js"></script>