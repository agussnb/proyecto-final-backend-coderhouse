<form action="/" method="post">
<h2 class="filterh2">Filtros:</h2>
    <div class="d-flex justify-content-center align-items-center">
    <select class="form-select selectProducts" name="selectedCategory" aria-label="Default select example">
        <option value="" selected>Todas</option>
        <option value="Pistol">Pistolas</option>
        <option value="Rifle">Rifles</option>
        <option value="Hunting Rifle">Rifles de caza</option>
        <option value="Shotgun">Escopetas</option>
        <option value="Submachine gun">Subfusiles</option>
    </select>
</div>
