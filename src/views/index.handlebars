<div class="row" id="products-container">
    {{#each products}}
    <div class="col-sm-4">
        <div class="card ">
            <h4 class="card-title text-white">{{this.title}}</h4>
            <img class="card-img-top" src="/images/{{this.thumbnail}}" alt="{{this.title}}">
            <div class="card-body">
                <p class="card-text precio">USD${{this.price}}</p>
                <a class="btn verDetalle text-white" href="/api/products/{{this._id}}">Ver detalle</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
